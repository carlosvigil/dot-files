{
    "editor.fontFamily": "'Fira Code', monospace",
    "editor.rulers": [
        80,
        120
    ],
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": true,
    "editor.cursorBlinking": "phase",
    "editor.fontLigatures": true,
    "vim.easymotion": true,
    "files.insertFinalNewline": true,
    "workbench.activityBar.visible": true,
    "workbench.editor.tabCloseButton": "off",
    "workbench.sideBar.location": "right",
    "files.trimTrailingWhitespace": true,
    "editor.minimap.renderCharacters": false,
    "vim.useSystemClipboard": true,
    "eslint.validate": [
        "html",
        "javascript",
        "javascriptreact",
        "vue"
    ],
    "guides.normal.style": "none",
    "guides.active.style": "solid",
    "guides.stack.style": "dotted",
    "guides.updateDelay": 0.64,
    "workbench.editor.swipeToNavigate": true,
    "workbench.colorTheme": "Material Theme",
    "todohighlight.keywords": [
        {
            "text": "BUG:",
            "color": "#333",
            "borderRadius":"50%",
            "backgroundColor": "#27AE60",
            "overviewRulerColor": "#27AE60"
        },
        {
            "text": "FEATURE:",
            "color": "#F2F2F2",
            "borderRadius": "2px",
            "backgroundColor": "#9B51E0",
            "overviewRulerColor": "#9B51E0"
        },
        {
            "text": "MAYBE:",
            "color": "#333",
            "borderRadius": "4px",
            "backgroundColor": "#56CCF2",
            "overviewRulerColor": "#56CCF2"
        },
        {
            "text": "NOTE:",
            "color": "#333",
            "borderRadius":"4px",
            "backgroundColor": "#BDBDBD",
            "overviewRulerColor": "#BDBDBD"
        },
        {
            "text": "REQUIREMENT:",
            "color": "#333",
            "borderRadius": "6px",
            "backgroundColor": "#F2994A",
            "overviewRulerColor": "#F2994A",
            "isWholeLine": true,
            "cursor":"pointer"
        }
    ],
    "todohighlight.include": "{**/*.swift,**/*.java,**/*.rb,**/*.hpp,**/*.cpp,**/*.js,**/*.jsx,**/*.ts,**/*.html,**/*.php,**/*.css,**/*.scss}",
    "editor.tabSize": 2,
    "vim.disableAnnoyingNeovimMessage": true,
    "workbench.iconTheme": "material-icon-theme",
    "editor.minimap.maxColumn": 80,
    "editor.renderLineHighlight": "all",
    "npm-intellisense.showBuildInLibs": true,
    "extensions.autoUpdate": true,
    "editor.fontSize": 13,
    "window.zoomLevel": 0,
    "editor.renderIndentGuides": false,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors" : {
        "normal": "#005f5f",
        "insert": "#5f0000",
        "visual": "#5f00af",
        "visualline": "#005f87",
        "visualblock": "#86592d",
        "replace": "#000000"
    },
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f87",
        "statusBar.noFolderBackground": "#005f87",
        "statusBar.debuggingBackground": "#005f87"
    }
}
