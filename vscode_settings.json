{
    "vim.disableAnnoyingNeovimMessage": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "editor.fontFamily": "'Fira Code', monospace",
    "editor.rulers": [
        79,
        120
    ],
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": true,
    "editor.cursorBlinking": "phase",
    "editor.fontLigatures": true,
    "vim.easymotion": true,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "vim.useSystemClipboard": true,
    "eslint.validate": [
        "html",
        "javascript",
        "javascriptreact",
        "vue"
    ],
    "guides.normal.style": "none",
    "guides.active.style": "solid",
    "guides.stack.style": "dotted",
    "guides.updateDelay": 0.64,
    "workbench.editor.swipeToNavigate": true,
    "workbench.colorTheme": "Dracula",
    "todohighlight.keywords": [
        {
            "text": "BUG:",
            "color": "#333",
            "borderRadius":"50%",
            "backgroundColor": "#27AE60",
            "overviewRulerColor": "#27AE60"
        },
        {
            "text": "FEATURE:",
            "color": "#F2F2F2",
            "borderRadius": "2px",
            "backgroundColor": "#9B51E0",
            "overviewRulerColor": "#9B51E0"
        },
        {
            "text": "MAYBE:",
            "color": "#333",
            "borderRadius": "4px",
            "backgroundColor": "#56CCF2",
            "overviewRulerColor": "#56CCF2"
        },
        {
            "text": "NOTE:",
            "color": "#333",
            "borderRadius":"4px",
            "backgroundColor": "#BDBDBD",
            "overviewRulerColor": "#BDBDBD"
        },
        {
            "text": "REQUIREMENT:",
            "color": "#333",
            "borderRadius": "6px",
            "backgroundColor": "#F2994A",
            "overviewRulerColor": "#F2994A",
            "isWholeLine": true,
            "cursor":"pointer"
        }
    ],
    "editor.tabSize": 2,
    "workbench.iconTheme": "material-icon-theme",
    "editor.minimap.maxColumn": 80,
    "editor.renderLineHighlight": "all",
    "npm-intellisense.showBuildInLibs": true,
    "extensions.autoUpdate": true,
    "editor.fontSize": 13,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors" : {
        "normal": "#005f5f",
        "insert": "#5f0000",
        "visual": "#5f00af",
        "visualline": "#005f87",
        "visualblock": "#86592d",
        "replace": "#000000"
    },
    "editor.renderIndentGuides": false,
    "materialTheme.cache.workbench.settings": {
        "themeColours": "Darker High Contrast",
        "accent": "Pink"
    },
    "editor.minimap.showSlider": "always",
    "editor.smoothScrolling": true,
    "vim.textwidth": 79,
    "todohighlight.include": [
        "**/*.js",
        "**/*.html",
        "**/*.css",
        "**/*.py"
    ],
    "python.linting.flake8Path": "/usr/local/bin/flake8",
    "python.pythonPath": "/usr/local/bin/python3",
    "workbench.fontAliasing": "antialiased",
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f87",
        "statusBar.noFolderBackground": "#005f87",
        "statusBar.debuggingBackground": "#005f87"
    },
    "git.enableSmartCommit": true,
    "workbench.panel.location": "right",
    "vim.foldfix": true
}
