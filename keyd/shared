[global]

default_layout canary
layer_indicator = 1
chord_timeout = 25


[main]

s+d = backspace
d+f = esc
j+k = enter
k+l = toggle(nav)
d = timeout(s, 225, layer(nav))
k = timeout(e, 225, layer(control))
capslock = overload(control, esc)
leftshift = overload(shift, backspace)
space = overload(shift, space)


[shift]

leftshift = capslock
rightshift = capslock
f11 = volumedown
f12 = volumeup


[control+shift]

1 = setlayout(canary)
2 = setlayout(qwerty)


[nav]

j = left
k = down
i = up
l = right
